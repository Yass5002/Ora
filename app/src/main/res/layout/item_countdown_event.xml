<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Event Color Indicator -->
            <View
                android:id="@+id/colorIndicator"
                android:layout_width="4dp"
                android:layout_height="32dp"
                android:background="@color/primary"
                android:layout_marginEnd="12dp" />

            <!-- Event Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="Wedding Day" />

                <TextView
                    android:id="@+id/eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="The most important day of my life"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Pin Icon -->
            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pin_24"
                android:contentDescription="@string/pinned_event"
                android:visibility="gone"
                app:tint="?attr/colorPrimary" />

            <!-- Options Menu -->
            <ImageView
                android:id="@+id/optionsMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:src="@drawable/ic_more_vert_24"
                android:contentDescription="@string/event_options"
                app:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Countdown Display - Responsive Container -->
        <LinearLayout
            android:id="@+id/countdownContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false">

            <!-- Days -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/daysValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/countdown_days"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="20sp"
                    app:autoSizeMaxTextSize="36sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/days"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeStepGranularity="0.5sp" />

            </LinearLayout>

            <!-- Hours -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/hoursValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/countdown_hours"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="20sp"
                    app:autoSizeMaxTextSize="36sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="08" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hours"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeStepGranularity="0.5sp" />

            </LinearLayout>

            <!-- Minutes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/minutesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/countdown_minutes"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="20sp"
                    app:autoSizeMaxTextSize="36sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="42" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/minutes"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeStepGranularity="0.5sp" />

            </LinearLayout>

            <!-- Seconds -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/secondsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/countdown_seconds"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="20sp"
                    app:autoSizeMaxTextSize="36sp"
                    app:autoSizeStepGranularity="1sp"
                    tools:text="18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/seconds"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeStepGranularity="0.5sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Target Date -->
        <TextView
            android:id="@+id/targetDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="middle"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeStepGranularity="0.5sp"
            tools:text="December 25, 2025 at 3:00 PM" />

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/statusIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:text="Event Ended"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>