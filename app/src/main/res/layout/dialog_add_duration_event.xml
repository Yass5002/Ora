<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Duration Countdown"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp" />

        <!-- Event Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Event title"
            app:startIconDrawable="@drawable/ic_event_24"
            app:startIconTint="?attr/colorPrimary"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Event Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Description (optional)"
            app:startIconDrawable="@drawable/ic_description_24"
            app:startIconTint="?attr/colorPrimary"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duration Selection Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp" />

        <!-- Duration Input Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:baselineAligned="false">

            <!-- Days Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/daysInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Days"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/daysInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="0"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Hours Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hoursInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hours"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hoursInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="0"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Minutes Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/minutesInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Minutes"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/minutesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="30"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Duration Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Select"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/quickDurationChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipStrokeColor="@color/chip_stroke_color"
                app:chipStrokeWidth="2dp"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip15min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 min"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipStrokeColor="@color/chip_stroke_color"
                app:chipStrokeWidth="2dp"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip30min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipStrokeColor="@color/chip_stroke_color"
                app:chipStrokeWidth="2dp"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipStrokeColor="@color/chip_stroke_color"
                app:chipStrokeWidth="2dp"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 day"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipStrokeColor="@color/chip_stroke_color"
                app:chipStrokeWidth="2dp"
                style="@style/Widget.Material3.Chip.Suggestion" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Color Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="start">

            <View
                android:id="@+id/color1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/color_primary_selector"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Crimson color" />

            <View
                android:id="@+id/color2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/color_secondary_selector"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Blue color" />

            <View
                android:id="@+id/color3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/color_tertiary_selector"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Yellow color" />

            <View
                android:id="@+id/color4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/color_error_selector"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Slate Blue color" />

            <View
                android:id="@+id/color5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_custom_picker_selector"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Custom color picker" />

        </LinearLayout>

        <!-- Reminder Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Reminders"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get notified before this event starts"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/reminderSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Dialog Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
