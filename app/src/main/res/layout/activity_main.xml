<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- ================================================================ -->
    <!-- ✨ THE FIX: DUMMY VIEW TO STEAL INITIAL FOCUS ON OLDER ANDROID ✨ -->
    <!-- This tiny, invisible view will grab the initial focus on startup, -->
    <!-- preventing the EditText from automatically focusing and opening -->
    <!-- the keyboard on Android 8 and below. -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <!-- ================================================================ -->


<!--    &lt;!&ndash; Background message &ndash;&gt;-->
