<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <!-- Glass Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_glass_background"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Status Indicator -->
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/widget_status_dot"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                android:contentDescription="@null" />

            <!-- Event Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Birthday Party"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/widget_title_color"
                android:ellipsize="end"
                android:maxLines="1"
                android:includeFontPadding="false" />

            <!-- Pin Icon -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_pin_24"
                android:visibility="visible"
                android:alpha="0.7"
                android:contentDescription="@null" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:progressDrawable="@drawable/widget_progress_drawable"
            android:max="100"
            android:progress="65" />

        <!-- Main Content Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Standard Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_time_card"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center">

                    <!-- Main Time Display -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3d 14h 25m"
                        android:textSize="28sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/widget_accent_color"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.03" />

                    <!-- Human Readable Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in 3 days"
                        android:textSize="11sp"
                        android:textColor="@color/widget_subtitle_color"
                        android:layout_marginTop="4dp"
                        android:alpha="0.8" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 15, 2025"
                android:textSize="10sp"
                android:textColor="@color/widget_subtitle_color"
                android:alpha="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORA"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/widget_brand_color"
                android:alpha="0.4"
                android:letterSpacing="0.15" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>