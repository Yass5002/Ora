<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".EventDetailActivity">

    <!-- Top Bar with Back Button -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/go_back"
            app:icon="@drawable/ic_arrow_back_24"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pinButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:alpha="0.6"
            android:contentDescription="@string/pin_event"
            app:icon="@drawable/ic_pin_24"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:alpha="0.6"
            android:contentDescription="@string/delete_event"
            app:icon="@drawable/ic_delete_24"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:alpha="0.6"
            android:contentDescription="@string/share_event"
            app:icon="@drawable/ic_share_24"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Event Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <View
                android:id="@+id/colorIndicator"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="@color/primary"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Wedding Day" />

                <TextView
                    android:id="@+id/eventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:text="The most important day of my life"
                    tools:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_pin_24"
                android:contentDescription="@string/pinned_event"
                android:visibility="gone"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Countdown Display Card Container with extra padding for glow -->
    <FrameLayout
        android:id="@+id/countdownOuterContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toTopOf="@id/infoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp"
        app:layout_constraintVertical_bias="0.5">

        <!-- Inner container with margins for the actual card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/countdownCardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/countdownCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurfaceContainer"
                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/countdownPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/colorSurface"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rounded_placeholder" />

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/placeholder_light" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rounded_placeholder" />

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/placeholder_light" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rounded_placeholder" />

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/placeholder_light" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rounded_placeholder" />

                                <View
                                    android:layout_width="36dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/placeholder_light" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="@string/empty_placeholder"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/countdownContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="20dp">

                        <TextView
                            android:id="@+id/statusIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_status_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:visibility="gone"
                            tools:text="Event Ended"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/countdownContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:id="@+id/daysContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/daysValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/countdown_days"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="24sp"
                                    android:autoSizeMaxTextSize="36sp"
                                    android:autoSizeStepGranularity="2sp"
                                    tools:text="15" />

                                <TextView
                                    android:id="@+id/daysLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.05"
                                    android:maxLines="1"
                                    android:text="@string/days"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/hoursValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/countdown_hours"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="24sp"
                                    android:autoSizeMaxTextSize="36sp"
                                    android:autoSizeStepGranularity="2sp"
                                    tools:text="08" />

                                <TextView
                                    android:id="@+id/hoursLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.05"
                                    android:maxLines="1"
                                    android:text="@string/hours"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/minutesValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/countdown_minutes"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="24sp"
                                    android:autoSizeMaxTextSize="36sp"
                                    android:autoSizeStepGranularity="2sp"
                                    tools:text="42" />

                                <TextView
                                    android:id="@+id/minutesLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.05"
                                    android:maxLines="1"
                                    android:text="@string/minutes"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/secondsValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/countdown_seconds"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="24sp"
                                    android:autoSizeMaxTextSize="36sp"
                                    android:autoSizeStepGranularity="2sp"
                                    tools:text="18" />

                                <TextView
                                    android:id="@+id/secondsLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.05"
                                    android:maxLines="1"
                                    android:text="@string/seconds"
                                    android:textAppearance="?attr/textAppearanceLabelSmall"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/targetDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textAlignment="center"
                            tools:text="December 25, 2025 at 3:00 PM" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Border positioned to extend beyond card boundaries -->
            <com.dev.ora.views.CountdownProgressBorderView
                android:id="@+id/countdownProgressBorder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="-20dp"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="@id/countdownCard"
                app:layout_constraintEnd_toEndOf="@id/countdownCard"
                app:layout_constraintStart_toStartOf="@id/countdownCard"
                app:layout_constraintTop_toTopOf="@id/countdownCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <!-- Event Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="0.6"
                    android:contentDescription="@string/created_date_desc"
                    android:src="@drawable/ic_calendar_24"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/created_label"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/createdDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Oct 1, 2025" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="?attr/colorOutlineVariant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="0.6"
                    android:contentDescription="@string/reminders_desc"
                    android:src="@drawable/ic_notifications_24"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/reminders_label"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/remindersStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Enabled" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Keep Screen On Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="720dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.6"
                android:contentDescription="@string/keep_screen_on_desc"
                android:src="@drawable/ic_lightbulb_24"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/keep_screen_on_label"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/keepScreenOnSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="32dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>