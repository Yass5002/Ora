<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Use specific Material You tokens that are more stable -->
    <color name="widget_background">@android:color/system_neutral1_10</color>
    <color name="widget_border">@android:color/system_neutral2_200</color>
    <color name="widget_card_background">@android:color/system_neutral2_50</color>

    <!-- Text colors - use neutral instead of accent for stability -->
    <color name="widget_title_color">@android:color/system_neutral1_900</color>
    <color name="widget_subtitle_color">@android:color/system_neutral2_700</color>
    <color name="widget_icon_color">@android:color/system_neutral2_800</color>

    <!-- Use primary container colors - more stable than accent -->
    <color name="widget_accent_color">@android:color/system_accent1_600</color>
    <color name="widget_brand_color">@android:color/system_accent1_600</color>
    <color name="widget_success_color">@android:color/system_accent3_600</color>

    <!-- Progress - use consistent variants -->
    <color name="widget_progress_track">@android:color/system_neutral2_200</color>
    <color name="widget_progress_start">@android:color/system_accent1_600</color>
    <color name="widget_progress_end">@android:color/system_accent1_600</color>

    <!-- Status -->
    <color name="widget_status_active">@android:color/system_accent3_600</color>
</resources>