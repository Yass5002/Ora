<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Selected ring -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="?attr/colorPrimary" />
                    <size android:width="56dp" android:height="56dp" />
                </shape>
            </item>
            <!-- Inner color circle -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="?attr/colorSurface" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <!-- Unselected state - just the color with subtle border -->
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="?attr/colorOutline" />
        </shape>
    </item>
</selector>
